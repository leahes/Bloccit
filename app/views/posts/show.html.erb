<h1><%= @post.title %></h1>
  <% if  user_is_authorized_for_post?(@post) %>
    <div class="col-md-4">
      <%= link_to "Edit", edit_topic_post_path(@post.topic, @post), class: 'btn btn-success' %>
      <%= link_to "Delete Post", [@post.topic, @post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
    </div>
   <% end %>
   <div class="row">
    <div class="col-md-8">
      <%= render partial: "labels/list", locals: { labels: @post.labels } %>
      <br />
    </div>
  </div>
  <br />
   <div class="row">
     <div class="col-md-8">
       <div class="media">
           <h4 class="media-heading">
           <%= link_to post.title, topic_post_path(@topic, post) %>
         </h4>
         <small>
           submitted <%= time_ago_in_words(post.created_at) %> ago by <% post.user.name %> <br>
           <%= post.comments.count %> comments
         </small>
       </div>
   <% if current_user %>
    <%= render 'comments/form', comment: locals: {parent: @post} %>
   <% end %>
  </div>
 <% end %>
</div>
